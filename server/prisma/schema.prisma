generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Role {
  ADMIN
  USER
}

model User {
  id             String @id @default(uuid())
  name           String
  email          String @unique
  hashedPassword String
  role           Role   @default(USER)
}
